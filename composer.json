{
    "name": "polishsymfonycommunity/blog-bundle",
    "type": "symfony-bundle",
    "description": "Blog bundle based on a WordPress database.",
    "keywords": ["blog", "bundle", "wordpress"],
    "homepage": "http://symfonylab.pl",
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub Zalas",
            "email": "jakub@zalas.pl",
            "homepage": "http://www.zalas.eu"
        },
        {
            "name": "Polish Symfony Community",
            "homepage": "https://github.com/PolishSymfonyCommunity/PSSBlogBundle/contributors"
        }
    ],
    "require": {
        "php":             ">=5.3.2",
        "symfony/symfony": "2.0.*",
        "doctrine/orm":    "2.1.*",

        "sensio/framework-extra-bundle": "2.0.*",
        "knplabs/knp-paginator-bundle":  "*"
    },
    "require-dev": {
        "behat/behat":           "2.3.*",
        "behat/mink":            "1.3.*",
        "behat/behat-bundle":    "*",
        "behat/mink-bundle":     "*",
        "behat/common-contexts": "*"
    },
    "repositories": {
        "behat/mink-deps": { "type": "composer",  "url": "behat.org" }
    },
    "autoload": {
        "psr-0": { "PSS\\Bundle\\BlogBundle": "" }
    },
    "target-dir": "PSS/Bundle/BlogBundle"
}
